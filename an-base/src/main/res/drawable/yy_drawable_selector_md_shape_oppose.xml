<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/CommColorOpposeClicked" />
            <stroke android:width="0.5dp" android:color="@color/CommColorBorder" />
            <padding android:bottom="2dp" android:top="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/CommColorOppose" />
            <stroke android:width="0.5dp" android:color="@color/CommColorBorderClicked" />
            <padding android:bottom="2dp" android:top="2dp" />
        </shape>
    </item>
</selector>