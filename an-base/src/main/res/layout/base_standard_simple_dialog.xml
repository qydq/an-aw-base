<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anLlHeadView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/base_drawable_loadingbg"
    android:gravity="center"
    android:minHeight="110dp"
    android:minWidth="110dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/anDialogIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yy_drawable_selector_loading" />

    <TextView
        android:id="@+id/anDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/listview_loading"
        android:textColor="@color/CommTxtMainColor"
        android:textSize="14sp" />
</LinearLayout>
