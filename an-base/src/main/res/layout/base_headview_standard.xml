<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anRlHeadView"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/CommMainBg">

    <LinearLayout
        android:id="@+id/anLlBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/DimenMargin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/anIvBack"
            android:layout_width="@dimen/CommDimenBarIcon"
            android:layout_height="@dimen/CommDimenBarIcon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/yy_drawable_selector_leftback" />

        <TextView
            android:id="@+id/anTvBack"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:text="@string/CommStringBack"
            android:textColor="@drawable/yy_drawable_selector_txt"
            android:textSize="@dimen/CommDimenBarTitleSmall" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/anPb"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/CommDimenIconSmall"
        android:layout_height="@dimen/CommDimenIconSmall"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/DimenMargin05"
        android:layout_toStartOf="@+id/anTvTitle"
        android:max="200"
        android:progress="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/anTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxEms="12"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/CommStringTitle"
        android:textColor="@drawable/yy_drawable_selector_txt"
        android:textSize="@dimen/CommDimenBarTitleMax" />

    <LinearLayout
        android:id="@+id/anLlRight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/DimenMargin10"
        android:clickable="true"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/anTvRight"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:text="@string/CommStringRight"
            android:textColor="@drawable/yy_drawable_selector_txt"
            android:textSize="@dimen/CommDimenBarTitleSmall" />

        <ImageView
            android:id="@+id/anIvRight"
            android:layout_width="@dimen/CommDimenBarIconSmall"
            android:layout_height="@dimen/CommDimenBarIconSmall"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DimenMargin08"
            android:src="@drawable/yy_drawable_selector_rightinfo" />
    </LinearLayout>
</RelativeLayout>